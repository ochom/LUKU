<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFE4ED"
    tools:context=".chat_app.ChatActivity">

    <LinearLayout
        android:id="@+id/topNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:background="@drawable/background_design"
        android:paddingVertical="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:layout_height="40dp"
            android:onClick="closeActivity"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/girl_one"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dummy"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student, Maasai Mara University"
                android:textSize="10sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/chat_area_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_actions"
        app:layout_constraintTop_toBottomOf="@+id/topNav">
        <LinearLayout
            android:id="@+id/chat_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/message_received_design"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Hello Richard, can we meets this Saturday, I really need to see you man."/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="#575757"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="12:15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/message_received_design"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="We can also cancel it !!"/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="#575757"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="12:15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:paddingVertical="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:layout_marginVertical="5dp"
                android:background="@drawable/message_sent_design"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="20dp"
                    android:text="Alright"/>

                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:textColor="#575757"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="12:15"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/ic_baseline_done_all_24"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/message_received_design"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Awesome, can't wait..."/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="#575757"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="12:15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:paddingVertical="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:layout_marginVertical="5dp"
                android:background="@drawable/message_sent_design"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="20dp"
                    android:text="Cool"/>

                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:textColor="#575757"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="12:15"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/ic_baseline_done_all_24"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/message_received_design"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="."/>
                <TextView
                    android:layout_marginRight="5dp"
                    android:textColor="#575757"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="12:15"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_send"
            app:cardCornerRadius="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp">
                <EditText
                    android:id="@+id/txtMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Type a message"
                    android:imeOptions="actionSend"
                    android:maxLines="4"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_send_pic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btn_send_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_baseline_camera_alt_24"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/circle_button"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp">
            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_send_24" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>