<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/noDataView"
    android:paddingVertical="20dp">
    <ImageView
        android:id="@+id/image_blank_page"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/tvStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/undraw_group_selfie_ijc" />
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_invite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="50dp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:text="Invite friends and expand your social space in Luku"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <Button
        android:id="@+id/btn_invite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design_bg"
        android:textColor="@color/white"
        android:paddingHorizontal="50dp"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Invite Friends"/>
    <TextView
        android:id="@+id/tvLoading"
        android:layout_marginHorizontal="40dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getting_people"/>
</RelativeLayout>